    <div class="menu-second">
        <form id="categorySearchForm" class="d-flex">
            <input type="text" id="categorySearchInput" placeholder="Search by category..." class="form-control me-2"
                style="background-color: black; color: white; border: none;" />
            <button type="submit" class="btn btn-outline-light">Search</button>
        </form>

        <script>
            document.getElementById("categorySearchForm").addEventListener("submit", function (e) {
                e.preventDefault(); // prevent normal form submission
                const category = document.getElementById("categorySearchInput").value.trim();
                if (category) {
                    window.location.href = `/products?category=${encodeURIComponent(category)}`;
                }
            });
        </script>

        <div onclick="showCart()">
            <img src="/newlook/assets/shopping.png" alt="shopping" class="heart">
        </div>
        <div onclick="showOrders()">
            <img src="/newlook/assets/clipboard.png" alt="shopping" class="heart">
        </div>

    </div>
</div>
